[nzsl_version("1.0")]
module FullscreenVertex;

// Vertex stage
struct VertIn
{
	[location(0)] pos: vec2[f32],
	[location(1)] uv: vec2[f32]
}

struct VertOut
{
	[builtin(position)] position: vec4[f32],
	[location(0)] uv: vec2[f32]
}

[entry(vert)]
fn main(input: VertIn) -> VertOut
{
	let output: VertOut;
	output.position = vec4[f32](input.pos, 0.0, 1.0);
	output.uv = input.uv;
}
